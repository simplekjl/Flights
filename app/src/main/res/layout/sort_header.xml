<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="flight" type="com.simplekjl.flights.presentation.features.flightlist.model.FlightDetailsModel"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" android:id="@+id/flight_sort_and_filter"
                android:fontFamily="@font/roboto_regular" android:textSize="14sp"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/sort_amp_filters" android:textColor="@color/textColorMedium"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" android:id="@+id/flight_search_result"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                tools:text="365 of 635 results"
                android:fontFamily="@font/roboto_regular" android:textSize="14sp" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>